# ---------- 基础环境 ----------
VITE_APP_ENV=dev
VITE_API_BASE_URL=http://localhost:9000/api

# ---------- 控制台日志 ----------
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOG=true
VITE_ENABLE_CONSOLE_DEBUG=true
VITE_ENABLE_CONSOLE_WARN=true
VITE_ENABLE_CONSOLE_ERROR=true

# ---------- 持久化日志 ----------
VITE_ENABLE_PERSISTENT_LOG=true
VITE_PERSISTENT_LOG_LEVELS=debug,info,warn,error
VITE_PERSISTENT_LOG_SAMPLE_RATE=1

# ---------- OIDC 客户端 ----------
VITE_ENABLE_OIDC_TRACE=true
VITE_OIDC_AUTHORITY=http://localhost:9000
VITE_OIDC_CLIENT_ID=vue-client
VITE_OIDC_REDIRECT_URI=http://localhost:5173/callback
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:5173/
VITE_OIDC_SILENT_REDIRECT_URI=http://localhost:5173/silent-renew.html
VITE_OIDC_SCOPES=openid profile offline_access
VITE_OIDC_STORAGE=local

# ---------- Auth 运行时 ----------
VITE_AUTH_FORCE_LOGOUT_ON_RENEW_FAIL=true
VITE_AUTH_FETCH_TIMEOUT_MS=8000

